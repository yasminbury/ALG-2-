
#include "pch.h"
#include <iostream>
#include <math.h>

void calculomesdia(int ano)
{
	int mes;
	int dia;

	mes = (ano * 12);
	dia = (mes * 30);

	printf("VocÃª tem %i anos , %i meses e %i dias de vida \n", ano, mes, dia);
	system("pause");
	
}


int main()
{
	int idade;

	printf("Favor digitar sua idade em anos: ");
	scanf_s("%i", &idade);

	calculomesdia(idade);
}
